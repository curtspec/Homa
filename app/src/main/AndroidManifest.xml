<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.curtspec2018.homa">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_custom_launcher"
        android:label="@string/custom_app_name"
        android:roundIcon="@mipmap/ic_custom_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:replace="android:label">
        <activity android:name=".house.MapViewActivity"></activity>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <meta-data
            android:name="com.naver.maps.map.CLIENT_ID"
            android:value="ytxjsbppzg" />

        <activity android:name=".MainActivity" />
        <activity
            android:name=".house.HouseActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".house.HouseEditActivity"
            android:parentActivityName=".house.HouseActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".tenant.TenantActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".tenant.TenantEditActivity"
            android:parentActivityName=".tenant.TenantActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".account.AccountActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SMS.SMSActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".memo.MemoActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".memo.MemoEditActivity"
            android:parentActivityName=".memo.MemoActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <receiver
            android:name=".DayChangeReciver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.DATE_CHANGED" />
            </intent-filter>
        </receiver>

        <service android:name=".MonthChangeService" />

        <activity
            android:name=".preference.PreferenceActivity"
            android:parentActivityName=".MainActivity" />
    </application>

</manifest>