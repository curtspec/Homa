<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.curtspec2018.homa">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_custom_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_custom_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.naver.maps.map.CLIENT_ID"
            android:value="ytxjsbppzg" />

        <activity android:name=".MainActivity"></activity>
        <activity
            android:name=".house.HouseActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".house.HouseEditActivity"
            android:parentActivityName=".house.HouseActivity" />
        <activity
            android:name=".tenant.TenantActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".tenant.TenantEditActivity"
            android:parentActivityName=".tenant.TenantActivity" />
        <activity
            android:name=".account.AccountActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SMS.SMSActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".memo.MemoActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".memo.MemoEditActivity"
            android:parentActivityName=".memo.MemoActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"></activity>
    </application>

</manifest>