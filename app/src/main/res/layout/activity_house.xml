<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="activity"
            type="com.curtspec2018.homa.house.HouseActivity"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/White"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".house.HouseActivity">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:theme="@style/AppTheme.appbar"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">
            </android.support.v7.widget.Toolbar>

            <TextView
                android:text="현제 건물"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="8dp"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circle_iv"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_request_image"
                    app:civ_border_color="@color/colorPrimary"
                    app:civ_border_width="1dp"
                    android:layout_width="75dp"
                    android:layout_height="75dp" />

                <TextView
                    android:id="@+id/tv_current_name"
                    android:text="현제 건물"
                    android:layout_marginTop="4dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@id/circle_iv"
                    android:layout_marginLeft="8dp"
                    android:layout_alignTop="@id/circle_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:clickable="true"
                    android:onClick="@{activity::clickEnter}"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:tint="@color/colorAccent"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/ic_next"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <TextView
                    android:id="@+id/tv_current_add"
                    android:text="서울특별시 관악구 봉천동"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_below="@id/tv_current_name"
                    android:layout_toRightOf="@id/circle_iv"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_current_add_detail"
                    android:text="169-160 번지"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_below="@id/tv_current_add"
                    android:layout_toRightOf="@id/circle_iv"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <TextView
                android:text="나의 건물"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="8dp"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <ListView
                android:id="@+id/listview"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>

            <LinearLayout
                android:id="@+id/empty_view"
                android:gravity="center_vertical"
                android:paddingVertical="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:tint="#a9a9a9"
                    android:src="@drawable/ic_error"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />

                <TextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#a9a9a9"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="표시할 데이터가 없습니다"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            app:fabSize="normal"
            android:onClick="clickFab"
            android:src="@drawable/ic_add"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</layout>
